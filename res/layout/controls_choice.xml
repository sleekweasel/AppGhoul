<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <Button android:id="@+id/button_launch"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Launch intent"
            android:onClick="onLaunchIntent"
            />

    <Button android:id="@+id/button_app_details"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Application info"
            android:onClick="onAppDetails"
            />

    <Button android:id="@+id/button_reconfigure"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Reconfigure widget"
            android:onClick="onReconfigure"/>

</LinearLayout>
