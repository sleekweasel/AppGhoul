<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uk.org.baverstock.appghoul">
    <uses-sdk
            android:minSdkVersion="3"
            android:targetSdkVersion="3"/>
    <application android:icon="@drawable/bloop" android:label="@string/app_name">

        <receiver android:name="uk.org.baverstock.appghoul.AppGhoulWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/appwidget_provider" />
        </receiver>

        <activity android:name=".Configure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
